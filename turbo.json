{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "env": ["NEXT_PUBLIC_HOST_DOMAIN", "NEXT_PUBLIC_SOCKET_DOMAIN"],
      "outputs": [".next/**"]
    },
    "backend#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  },
  "globalEnv": [
    "EXPRESS_PORT",
    "SOCKET_PORT",
    "REDIS_SECRET",
    "COOKIE_SECRET",
    "SESSION_SECRET",
    "SOCKET_SESSION_SECRET",
    "GOOGLE_AUTH_CLIENT_ID",
    "GOOGLE_AUTH_CLIENT_SECRET",
    "S3_ENDPOINT_URL",
    "S3_REGION",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "MONGO_CONNECTION_URL",
    "MONGO_DATABASE_NAME",
    "NODE_ENV",
    "BUCKET_NAME",
    "MICROSOFT_AUTH_CLIENT_ID",
    "MICROSOFT_AUTH_CLIENT_SECRET",
    "SOCKET_AUTH_TOKEN_KEY",
    "SOCKET_AUTH_TOKEN",
    "APP_DOMAIN",
    "API_DOMAIN"
  ]
}
